# $HOME/.config/sway/config.d/options
# Sway options and settings

set $mod Mod4
set $term footclient
set $browser firefox
set $filemanager nemo
set $menu j4-dmenu-desktop --usage-log="$HOME/.config/j4-dmenu-desktop.log" --no-generic --dmenu "bemenu -p ''" --term footclient --wrapper "swaymsg exec --" --use-xdg-de

default_border none
#gaps outer 0
#gaps inner 0
#smart_gaps on
font pango:Hack 10

set $fg #abb2bf
set $bg #282c34


# class                 border  backgr. text indicator child_border
client.focused          $bg     $bg     $fg  $bg       $bg
client.focused_inactive $bg     $bg     $fg  $bg       $bg
client.unfocused        $bg     $bg     $fg  $bg       $bg
client.urgent           $bg     $bg     $fg  $bg       $bg
client.placeholder      $bg     $bg     $fg  $bg       $bg

client.background       $bg