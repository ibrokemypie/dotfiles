old_dir="$PWD"
for d in "$HOME"/.config/zsh/*/; do
	cd "$d"
	if [ "$(git rev-parse --is-inside-work-tree 2>/dev/null)" ]; then
		pull_status="$(git pull)"
		if [ "$pull_status" != "Already up to date." ]; then
			if [ "$d" = "fzf-tab" ]; then
				fzf_tab_updated=true
			fi
			echo "$status"
		fi
	fi
done

if [ "$fzf_tab_updated" = true ]; then
	zsh -c "source $HOME/.config/zsh/fzf-tab/fzf-tab.plugin.zsh; build-fzf-tab-module"
fi

cd "$old_dir"
