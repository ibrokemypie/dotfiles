syntax "cmake" "CMakeLists\.txt$|\.cmake$"

color brightblue "[A-Za-z_][A-Za-z0-9_]*[[:space:]]*[(]"
color white    "[(]"
color brightyellow  "[[:<:]](ON|OFF|TRUE|FALSE|YES|NO)[[:>:]]"
color magenta "\$\{[A-Za-z0-9_!@#$*?-]+\}"
color green ""(\\.|[^"])*"|'(\\.|[^'])*'"
color black,cyan   "\\([()#$^]|\\|\")"
color cyan "(^|[[:space:]])#([^{].*)?$"
color ,cyan "[[:space:]]+$"
color brightwhite,red    "	+ +| +	+"
# +EXTRALINT
